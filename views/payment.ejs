<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Confirmation</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <%- include('./partials/header') %>

  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="bg-white max-w-2xl w-full rounded-2xl shadow-lg p-8 text-center space-y-6">

      <h1 class="text-3xl font-bold text-green-600">Thank You for Your Order!</h1>
      
      <div class="text-left space-y-2">
        <p class="text-gray-700"><span class="font-semibold">Customer Name:</span> <%= order.name %></p>
        <p class="text-gray-700"><span class="font-semibold">Total Amount:</span> ₹<%= order.totalAmount %></p>
        <p class="text-gray-700"><span class="font-semibold">Payment Method:</span> <%= order.paymentMethod %></p>
      </div>

      <div class="text-left">
        <h2 class="text-xl font-semibold text-indigo-700 mb-2">Ordered Items</h2>
        <ul class="space-y-3">
          <% items.forEach(item => { %>
            <li class="bg-gray-50 p-3 rounded-lg border border-gray-200 shadow-sm flex justify-between items-center">
              <div>
                <p class="font-medium"><%= item.product.name || item.product %></p>
                <p class="text-sm text-gray-600">Quantity: <%= item.quantity %></p>
              </div>
              <span class="text-indigo-600 font-semibold">₹<%= item.price %></span>
            </li>
          <% }) %>
        </ul>
      </div>
         <div class="mt-6">
        <a href="/userOrders" 
           class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition">
          Go to All Orders
        </a>
      </div>
    </div>
  </main>



</body>
</html>
