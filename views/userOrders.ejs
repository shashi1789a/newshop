<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Orders</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 min-h-screen font-sans">

  <%- include('partials/header') %>

  <main class="max-w-4xl mx-auto px-4 py-10">
    <h1 class="text-4xl font-bold text-center text-slate-800 mb-10">ðŸ“¦ My Orders Timeline</h1>

    <% if (orders.length === 0) { %>
      <div class="text-center text-lg text-gray-600 bg-white py-10 px-6 rounded-xl shadow-sm">
        You haven't placed any orders yet.
      </div>
    <% } else { %>
      <div class="relative border-l-4 border-purple-400 pl-6 space-y-10">
        <% orders.forEach((order, index) => { %>
          <div class="relative group">
            <div class="absolute w-4 h-4 bg-purple-500 rounded-full -left-2 top-2 group-hover:scale-110 transition"></div>

            <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-200">
              <div class="flex justify-between items-center mb-3">
                <div>
                  <p class="text-sm text-gray-500">Placed on: <%= order.createdAt.toDateString() %></p>
                  <h2 class="text-xl font-bold text-purple-700">Order #<%= index + 1 %></h2>
                </div>
                <div class="text-right">
                  <p class="font-bold text-green-600 text-lg">â‚¹<%= order.totalAmount %></p>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-4">
                <span class="text-sm bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full font-medium">Status: <%= order.orderStatus %></span>
                <span class="text-sm bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full font-medium">Payment: <%= order.paymentStatus %></span>
                <span class="text-sm bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full font-medium">Method: <%= order.paymentMethod %></span>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                <% order.items.forEach(item => { %>
                  <div class="flex bg-gray-50 rounded-xl overflow-hidden shadow-sm border">
                    <% if (item.product.image) { %>
                      <img 
                        src="data:image/jpeg;base64,<%= Buffer.from(item.product.image).toString('base64') %>" 
                        alt="<%= item.product.name %>" 
                        class="w-24 h-24 object-cover"
                      />
                    <% } else { %>
                      <div class="w-24 h-24 bg-gray-200 flex items-center justify-center text-gray-500 text-sm">No Image</div>
                    <% } %>
                    <div class="px-3 py-2 flex-1">
                      <p class="font-semibold text-slate-700 text-sm mb-1"><%= item.product.name %></p>
                      <p class="text-xs text-gray-500">Qty: <%= item.quantity %></p>
                      <p class="text-sm font-medium text-indigo-600">â‚¹<%= item.price %></p>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
