<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cart - Order Summary</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-purple-100 via-pink-100 to-yellow-100 font-sans text-gray-800">
  <%-  include('./partials/header') %>
  <div class="max-w-6xl mx-auto px-6 py-12">
    <h2 class="text-4xl font-extrabold mb-10 text-center text-purple-900 drop-shadow-lg">Your Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <div class="text-center py-24">
        <h3 class="text-2xl font-semibold text-gray-700 mb-4">Your cart is empty</h3>
        <a href="/" class="mt-6 inline-block bg-purple-600 text-white px-8 py-3 rounded-lg hover:bg-purple-700 transition shadow-lg">
          Continue Shopping
        </a>
      </div>
    <% } else { %>

      <div class="grid gap-10 md:grid-cols-2">
        <% let total = 0; %>
        <% cart.forEach(product => { 
             const qty = 1;
             const netPrice = product.price * qty;
             total += netPrice;
        %>
          <div class="bg-white p-6 rounded-3xl shadow-xl flex gap-6 items-center hover:shadow-2xl transition">
            <img 
              src="data:image/jpeg;base64,<%= Buffer.from(product.image).toString('base64') %>" 
              alt="<%= product.name %>" 
              class="w-36 h-36 object-cover rounded-xl border-4 border-purple-300"
            />

            <div class="flex-1 flex flex-col">
              <h3 class="text-2xl font-bold text-purple-900 mb-2"><%= product.name %></h3>
              <p class="text-purple-700 text-lg font-semibold">MRP: ₹<%= product.price %></p>

              <p class="font-extrabold text-xl mt-4 text-purple-800">Net Total: ₹<%= netPrice %></p>

              <div class="flex gap-6 mt-auto">
                <a href="/removefromcart/<%= product._id %>" 
                   class="text-red-600 hover:text-red-800 font-semibold transition">
                  Remove
                </a>

                <a href="/order?productid=<%= product._id %>" 
                   class="ml-auto bg-green-600 text-white px-6 py-2 rounded-xl font-semibold hover:bg-green-700 transition shadow-md">
                  Order
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="mt-14 bg-white p-8 rounded-3xl shadow-2xl max-w-md mx-auto text-center">
        <h3 class="text-3xl font-extrabold mb-6 text-purple-900">Price Details</h3>
        <div class="space-y-4 text-lg font-semibold text-purple-800">
          <div class="flex justify-between">
            <span>Total Items</span>
            <span><%= cart.length %></span>
          </div>
          <div class="flex justify-between">
            <span>Total MRP</span>
            <span>₹ <%= total %></span>
          </div>
          <div class="flex justify-between">
            <span>Shipping Fee</span>
            <span class="text-green-600 font-bold">FREE</span>
          </div>
        </div>

        <hr class="my-6 border-purple-300" />

        <div class="flex justify-between text-2xl font-extrabold text-purple-900 mb-8">
          <span>Total Amount</span>
          <span>₹ <%= total %></span>
        </div>

        <a href="/Details" class="inline-block bg-purple-700 text-white px-10 py-3 rounded-full text-xl font-bold hover:bg-purple-800 transition shadow-lg">
          Place Order
        </a>
      </div>
    <% } %>
  </div>
</body>
</html>
