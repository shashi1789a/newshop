<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile</title>
  <script src="https://kit.fontawesome.com/a81368914c.js" crossorigin="anonymous"></script>

  <style>
    /* ===== Profile Page Styling (No body styling) ===== */
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    /* Container */
    .container {
      display: flex;
      background: #fff;
      margin: 80px auto;
      width: 85%;
      max-width: 1200px;
      border-radius: 18px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    /* Left Navigation Box */
    .leftbox {
      width: 80px;
      background: linear-gradient(180deg, #4caf50, #2e7d32);
      display: flex;
      justify-content: center;
      padding: 40px 0;
      position: relative;
      transition: width 0.3s ease;
    }

    .leftbox:hover {
      width: 150px;
    }

    .leftbox nav {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 25px;
      width: 100%;
    }

    .leftbox nav .tab {
      color: #e8f5e9;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      width: 90%;
      padding: 12px 16px;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .leftbox nav .tab i {
      margin-right: 10px;
    }

    .leftbox nav .tab:hover,
    .leftbox nav .tab.active {
      background: rgba(255, 255, 255, 0.2);
      transform: translateX(5px);
    }

    /* Right Content Box */
    .rightbox {
      flex: 1;
      padding: 50px;
      display: flex;
      flex-direction: column;
      background: #f9fff7;
      position: relative;
    }

    .tabShow {
      display: none;
      animation: fadeIn 0.5s ease forwards;
    }

    .tabShow.active {
      display: block;
    }

    /* Animation */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(15px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Headings */
    h1 {
      font-size: 28px;
      margin-bottom: 25px;
      color: #1b5e20;
      border-bottom: 3px solid #81c784;
      display: inline-block;
      padding-bottom: 6px;
    }

    h2 {
      font-size: 16px;
      font-weight: 600;
      margin: 15px 0 6px;
      color: #2e4600;
    }

    /* Input Fields */
    .input {
      width: 100%;
      padding: 12px 16px;
      border: 1.5px solid #a5d6a7;
      border-radius: 10px;
      outline: none;
      background: #f1f8e9;
      font-size: 15px;
      transition: all 0.3s ease;
    }

    .input:focus {
      border-color: #4caf50;
      background: #fff;
      box-shadow: 0 0 10px rgba(76, 175, 80, 0.15);
    }

    /* Buttons */
    .btn {
      display: block;
      width: fit-content;
      margin-top: 15px;
      padding: 12px 28px;
      background: linear-gradient(145deg, #4caf50, #2e7d32);
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      font-weight: 600;
      letter-spacing: 0.5px;
      box-shadow: 0 6px 15px rgba(76, 175, 80, 0.3);
      transition: all 0.3s ease;
    }

    .btn:hover {
      transform: translateY(-3px);
      background: linear-gradient(145deg, #43a047, #1b5e20);
      box-shadow: 0 10px 25px rgba(76, 175, 80, 0.4);
    }

    /* Paragraphs */
    p {
      font-size: 15px;
      color: #33691e;
      background: #f1f8e9;
      padding: 10px 15px;
      border-radius: 10px;
      margin-bottom: 8px;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .container {
        flex-direction: column;
        width: 95%;
      }

      .leftbox {
        width: 100%;
        flex-direction: row;
        padding: 10px 0;
        justify-content: space-around;
      }

      .rightbox {
        padding: 30px;
      }
    }
  </style>
</head>
<body>
<%- include('partials/header') %>
  <div class="container">
    <!-- Left Sidebar -->
    <div class="leftbox">
      <nav>
        <div class="tab active" onclick="showTab('profile')">
          <i class="fas fa-user"></i>
          <span>Profile</span>
        </div>
        <div class="tab" onclick="showTab('account')">
          <i class="fas fa-cog"></i>
          <span>Account</span>
        </div>
        <div class="tab" onclick="showTab('security')">
          <i class="fas fa-lock"></i>
          <span>Security</span>
        </div>
      </nav>
    </div>

    <!-- Right Content -->
    <div class="rightbox">
      <!-- Profile Tab -->
      <div class="tabShow active" id="profile">
        <h1>Personal Information</h1>

        <h2>Full Name</h2>
        <input type="text" class="input" placeholder="Enter your name" />

        <h2>Email Address</h2>
        <input type="email" class="input" placeholder="Enter your email" />

        <h2>Phone Number</h2>
        <input type="text" class="input" placeholder="Enter your phone number" />

        <button class="btn">Edit</button>
        <button class="btn">Save</button>
        <button class="btn">View Details</button>
      </div>

      <!-- Account Tab -->
      <div class="tabShow" id="account">
        <h1>Account Settings</h1>
        <p>Change your username, update profile photo, or delete your account.</p>
        <button class="btn">Update Account</button>
      </div>

      <!-- Security Tab -->
      <div class="tabShow" id="security">
        <h1>Security Settings</h1>
        <p>Change password, enable 2FA, or manage login devices.</p>
        <button class="btn">Change Password</button>
      </div>
    </div>
  </div>

  <script>
    function showTab(tabId) {
      document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
      document.querySelectorAll(".tabShow").forEach(tab => tab.classList.remove("active"));
      document.getElementById(tabId).classList.add("active");
      event.currentTarget.classList.add("active");
    }
  </script>
</body>
</html>
